package com.capgeticket.resteventos.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import io.swagger.v3.oas.models.ExternalDocumentation;
import io.swagger.v3.oas.models.OpenAPI;
import io.swagger.v3.oas.models.info.Contact;
import io.swagger.v3.oas.models.info.Info;
import io.swagger.v3.oas.models.info.License;

@Configuration
public class OpenApiConfig {
	
	
    @Bean
    public OpenAPI CapgeTicketOpenAPI() {
        return new OpenAPI()
                .info(new Info().title("CapgeTicket API")
                .description("Documentaci√≥n de la CapgeTicket API")
                .version("v1.0")
                .contact(new Contact().name("Grupo 2").
                        url("https://grupo2.es").email("grupo2@ejemplo.es"))
                .license(new License().name("LICENSE").url("http://springdoc.org")))
                .externalDocs(new ExternalDocumentation()
                .description("Descripcion del proyecto");
    }
	

}
